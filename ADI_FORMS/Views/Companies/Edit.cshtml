                            @Html.ValidationMessageFor(m => m.UnionDuePercent)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.UnionDueAmount)
                            @Html.TextBoxFor(m => m.UnionDueAmount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UnionDueAmount)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.MidMonthPercent)
                            @Html.TextBoxFor(m => m.MidMonthPercent, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MidMonthPercent)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.AnnualLeavePay)
                            @Html.TextBoxFor(m => m.AnnualLeavePay, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.AnnualLeavePay)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.MidMonthAmt)
                            @Html.TextBoxFor(m => m.MidMonthAmt, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MidMonthAmt)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.LargeCompanyName)
                            @Html.TextBoxFor(m => m.LargeCompanyName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LargeCompanyName)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.BranchId)
                            @Html.DropDownList("BranchId", String.Empty)
                            @Html.ValidationMessageFor(m => m.BranchId)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.GradeId)
                            @Html.DropDownList("GradeId", String.Empty)
                            @Html.ValidationMessageFor(m => m.GradeId)
                        </div>
                    </div>


                    <div class="col-md-6 multi-horizontal">
                        <div class="form-group">

                            @Html.HiddenFor(m => m.Id)
                            <button id="savebtn" type="submit" class="btn btn-info .js-save">Save</button>

                        </div>
                    </div>
                    <br />

                    <div id="addEditUser" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-lg">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Registered Companies</h4>
                                </div>
                                <div class="modal-body">
                                    @* The body of the edit and save dialog comes here *@
                                    <table id="companieslookup" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Company</th>
                                                <th>Large Company</th>
                                                <th>Branch</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
