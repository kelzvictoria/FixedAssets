                            @Html.ValidationMessageFor(m => m.TaxReference)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CurrentYear)
                            @Html.TextBoxFor(m => m.CurrentYear, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CurrentYear)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CurrentMonth)
                            @Html.TextBoxFor(m => m.CurrentMonth, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CurrentMonth)
                        </div>
                    </div>
                    <div class="col-md-4 multi-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.BudgetedStaff)
